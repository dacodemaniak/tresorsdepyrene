{%  extends "base.html.twig" %}

{% block title %}
	Votre panier - Les Trésors de Pyrène
{% endblock %}

{% block body %}
	<div class="container" id="checkout">
	
		<!-- Inclusion du progress stepper -->
		{{ include("@Content/Default/checkoutstepper.html.twig", {"step": "basket-list"}) }}
		
    	<table id="basket-list" class="table table-hover table-bordered table-responsive hidden">
    		<thead class="thead-light">
    			<tr>
    				<th scope="col">Produit</th>
    				<th scope="col">Par</th>
    				<th scope="col">Quantité</th>
    				<th scope="col">Prix T.T.C.</th>
    				<th scope="col">Total T.T.C.</th>
    				<th scope="col">&nbsp;</th>
    			</tr>
    		</thead>
    		
    		<tbody>
    		</tbody>
    		
    		<tfoot>
  				<tr class="table-dark">
    				<td colspan="4" class="text-right">
    					Total T.T.C.
    				</td>
    				<td class="fulltax-total" colspan="2"></td>
    			</tr>
    			
    			<!-- Bouton Suivant : adresses -->
    			<tr>
    				<td colspan="6" class="text-right">
    					<a href="{{ path('delivery') }}" class="btn btn-success" role="button" id="next-step">
    						Livraison >>
    					</a>
    				</td>
    			</tr>
    			
    			<tr class="table-dark" id="total-ht">
    				<td colspan="4" class="text-right">
    					H.T.
    				</td>
    				<td class="gran-total" colspan="2"></td>
    			</tr>
    		</tfoot>
    	</table>
    </div>
    
    <div class="alert alert-warning hidden" id="basket-warns">
    	<p class="no-user inactive">
    		Vous devez vous authentifier ou créer un compte pour passer à l'étape suivante.
    	</p>
    	
    	<p class="no-address inactive">
    		Vous devez créer une adresse de facturation / livraison pour passer à l'étape suivante.
    	</p>
    </div>
	
	{{ include("@Content/Default/dialog.html.twig") }}
{% endblock %}